<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Content" parent="AppTheme">
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="AppTheme.Observation.Title" parent="AppTheme">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Observation.Content" parent="AppTheme">
        <item name="android:textSize">@dimen/text_xs</item>
    </style>
</resources>
